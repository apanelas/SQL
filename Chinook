SELECT DISTINCT country FROM chinook.customers;

SELECT * FROM chinook.customers
WHERE country = "India";

SELECT Country, COUNT(CustomerId) AS Customers
FROM (SELECT DISTINCT Country, CustomerId
FROM chinook.customers ) AS DistinctCountries
GROUP BY Country;

WITH customerstotal AS (
SELECT invoices.CustomerId, ROUND(SUM(invoices.Total), 2) AS customertotal, customers.Country
FROM invoices
JOIN customers
ON invoices.CustomerId = customers.CustomerId
GROUP BY customers.CustomerId)

SELECT Country, ROUND(SUM(customertotal), 2) AS totalsales
FROM customerstotal
GROUP BY Country;

SELECT ROUND(SUM(Total), 2)
FROM invoices
WHERE InvoiceDate LIKE '2009%';
